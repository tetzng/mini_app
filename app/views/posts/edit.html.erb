<div class="contents row">
  <h2>EDIT</h2>
  <div class="card">
    <%= form_with url: post_path, method: :patch do |f| %>
      <div class="input-field col s9 m8 l6">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, value: @post.title %>
      </div>

      <div class="row">
        <div class="file-field input-field col s9 m8 l6">
          <div class="btn blue lighten-2">
            <%= f.label :image do %>
              <i class="material-icons left img-btn">image</i>IMAGE
            <% end %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="画像を選択してください">
            <%= f.file_field :image %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :text, '本文' %>
          <%= f.text_area :text, class: "materialize-textarea", value: @post.text  %>
        </div>
      </div>

      <div class="actions col s12">
        <%= button_tag type: 'submit', class: "btn blue lighten-2 white-text send-btn" do %>
          <i class="material-icons left">save</i>SAVE
        <% end %>
      </div>

    <% end %>
  </div>
</div>