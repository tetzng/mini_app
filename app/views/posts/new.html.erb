<div class="contents row">
    <%= form_with url: posts_path do |f| %>
    <h2 class="">投稿する</h2>
    <div class="card">

        <div class="input-field col s9 m8 l6">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title %>
        </div>

        <div class="file-field input-field col s9 m8 l6">
          <div class="btn blue lighten-2">
            <%= f.label :image do %>
              <i class="material-icons left img-btn">image</i>IMAGE
            <% end %>
          </div>
          <div class="file-path-wrapper">
            <input class="file-path validate" type="text" placeholder="画像を選択してください">
            <%= f.file_field :image %>
          </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <%= f.label :text, '本文' %>
          <%= f.text_area :text, class: "materialize-textarea" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="actions col s12">
        <%= button_tag type: 'submit', class: "btn blue lighten-2 send-btn" do %>
          <i class="material-icons left">save</i>SUBMIT
        <% end %>
      </div>
    </div>

  </div>
    <% end %>
</div>