<div class="col s12 m10 offset-m1 l10 offset-l1">
  <div class="card card-panel hoverable">
      <div class="card-image">
      <%= link_to "/posts/#{post.id}" do %>
        <% if post.image.attached? %>
          <%= image_tag post.image %>
        <% else %>
          <%= image_tag "post_default.jpg" %>
        <% end %>
      <% end %>
      </div>
      <div class="card-content">
        <%= link_to "/posts/#{post.id}" do %>
          <span class="card-title truncate"><%= post.title %></span>
        <% end %>
        <p class="truncate"><%= post.text %></p>
      </div>

<%
=begin%>



    <div class="card-action row">
      <div class="col s6 offset-6">
      <%= link_to "/posts/#{post.id}", class: "btn blue lighten-2" do %>
        <i class="material-icons left">more</i>MORE
      <% end %>
      </div>
      <div class="col s6">
        <% if current_user == post.user %>
          <%= link_to "/posts/#{post.id}", method: :delete, class: "btn right blue lighten-2 btn-left" do %>
            <i class="material-icons left">delete</i>削除
          <% end %>
          <%= link_to "/posts/#{post.id}/edit", class: "btn right blue lighten-2" do %>
            <i class="material-icons left">edit</i>編集
          <% end %>
        <% end %>
      </div>
    </div>
<%
=end%>


  </div>
</div>